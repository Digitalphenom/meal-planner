<section class="hero-content-container">
  <h1> Tailored Meal Planner</h1>
    <p class="hero-text">We get it, losing weight is hard work. Were here to make it a little easier for you. Enter your info, and well send you a Free Custom Weight Loss Meal Plan.
    </p>
    <br>

    <div class="meals-container">
    <div class="meal-box meal-box--single">
      <div class="meal-top meal-top--single">
        <h2>Meal <%= @meal_id %> </h2> 
        <div class="meal-sections meal-sections--single">
          <h4>Calories</h4>
          <h4>Protein</h4>
          <h4>Carbohydrate</h4>
          <h4>Fat</h4>
        </div>
          <a href="/build-meal-plan/edit-meal/<%= @meal_id %>/add-meal">
          <img src="/fonts/add-document.png" alt="Add File" width="25"   height="25">
          </a>
      </div>
      <!-- insert after submitting post request-->
      <% if meals? %>
        <% access_meal_values do |food_choice, cal, protein, carb, fat| %>
        <div class="meal-values-container"> 
          <h5><%= "#{@food_portion} #{food_choice}" %></h5>
          <div class="meal-line-values">
            <p><%= cal %> </p>
            <p><%= protein %></p>
            <p><%= carb %></p>
            <p><%= fat %></p>
          </div>
            <a href="build-meal-plan/edit-meal/:id/add-meal">
              <img src="/fonts/file-edit.png" alt="Edit File" width="25"height="25">
            </a>
            <a href="build-meal-plan/edit-meal">
              <img src="/fonts/trash-xmark.png" alt="Trash File"width="25" height="25">
            </a>
        </div>
        <% end %>
      <% else %>
        <div class="meal-values-container"></div>
      <% end %>
      <!-- end -->
        <div class="meal-total-values-bottom">
        <p>Totals</p>
        <p></p>
        <p>/ <%= @calories_per_meal %> gram</p>
        <p>/ <%= @total_protein  %> gram</p>
        <p>/ <%= @total_carb  %> gram</p>
        <p>/ <%= @total_fat  %> gram</p>
      </div>
      </div>
    </div>
  </div>
  <div class="meal-btn-container meal-btn-container--single-meal">
    <div class="meals-back-button">
      <a href="/build-meal-plan">Go Back</a>
    </div>
    <button href="" type="submit" class="meals-button">Done</button>
  </div>
</section>